function _init()

	player={
		x=64,
		y=64,
	}

end

function _update()

	if btn(⬆️) then
		player.y-=1
	end
	if btn(⬇️) then
		player.y+=1
	end
	if btn(⬅️) then 
		player.x-=1
	end
	if btn(➡️) then
		player.x+=1
	end
	
end

function _draw()
	
		cls()
		sspr(1,3,17,25,player.x,player.y)

end
